@page "/admin/propertytypes"

<PageTitle>Property Types</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudText Typo="Typo.h6" Class="py-4 px-5">This page contains the property types, used to attach information to messages.</MudText>

<MudTable Items="@_propertyTypes"
          Dense
          Striped
          Virtualize
          Filter="new Func<PropertyType,bool>(FilterFunc1)">
    <ToolBarContent>
        <MudButton StartIcon="@Icons.Material.Filled.Create"
                   Variant="Variant.Filled"
                   OnClick="OnCreateAsync">Create</MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="_gridSearchString"
                      Placeholder="Search"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<PropertyType, object>(x=>x.Name)">Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<PropertyType, object>(x=>x.SafeDescription())">Description</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<PropertyType, object>(x=>x.IsSystem)">System</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Description">@context.SafeDescription()</MudTd>
        <MudTd DataLabel="System"><MudCheckBox Checked="@context.IsSystem" ReadOnly /></MudTd>
        <MudTd>
            <MudTooltip Text="Delete">
                <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="() => OnDeleteAsync(context)" />
            </MudTooltip>
            <MudTooltip Text="Edit">
                <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="() => OnEditAsync(context)" />
            </MudTooltip>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
    <NoRecordsContent>
        No property types were found.
    </NoRecordsContent>
</MudTable>
