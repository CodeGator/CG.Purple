@page "/messages/mail/{MessageId:int}"

<PageTitle>Email Preview</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudText Typo="Typo.h6">Email Preview</MudText>

@if (_isBusy)
{
    <MudText>Please wait ...</MudText>
}
else if (_message is null)
{
    <MudAlert Severity="Severity.Error">Failed to preview the message!</MudAlert>
}
else
{
    <MudGrid Justify="Justify.SpaceBetween">
        <MudItem xs="12"></MudItem>
        <MudItem xs="12" Class="d-flex align-center justify-center mud-width-full py-8">
             @((MarkupString)_message.Body)
        </MudItem>
    </MudGrid>
}


