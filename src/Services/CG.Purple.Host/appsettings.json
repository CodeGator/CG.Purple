{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "\\Logging\\CG.Purple.Host\\log.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "DAL": {
    "DropDatabaseOnStartup": true,
    "MigrateDatabaseOnStartup": true,
    "ConnectionString": ""
  },
  "BLL": {
    "FileTypes": {
      "DefaultCacheDuration": "00.00:30:00"
    },
    "MailMessages": {
      "DefaultCacheDuration": "00.00:00:30"
    },
    "TextMessages": {
      "DefaultCacheDuration": "00.00:00:30"
    }
  },
  "HostedServices": {
    "MessageProcessing": {
      "ThrottleDuration": "00.00:00:05",
      "StartupDelay": "00.00:00:05",
      "MaxErrorCount": 3,
      "MaxDaysToLive":  7
    }
  },
  "Seeding": {
    "SeedOnStartup": true,
    "Force": false,
    "FileNames": [
      "Seeding/mimeTypes.json",
      "Seeding/parameterTypes.json",
      "Seeding/propertyTypes.json",
      "Seeding/providerTypes.json",
      "Seeding/providerParameters.json",
      "Seeding/mailMessages.json",
      "Seeding/textMessages.json",
      "Seeding/processLogs.json"
    ]
  },
  "DataProtection": {
    "DisableAutomaticKeyGeneration": false,
    "AzureKeyStorage": {
      "ConnectionString": "",
      "ContainerName": "",
      "BlobName": ""
    }
  }
}
