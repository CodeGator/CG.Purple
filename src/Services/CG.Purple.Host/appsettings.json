{
  "AllowedHosts": "*",
  "BLL": {
    "MailMessageManager": {
      "DefaultProcessDelay": "00.00:00:00",
      "DefaultArchiveDelay": "00.00:00:00"
    },
    "TextMessageManager": {
      "DefaultProcessDelay": "00.00:00:00",
      "DefaultArchiveDelay": "00.00:00:00"
    }
  },
  "DAL": {
    "DropDatabaseOnStartup": true,
    "MigrateDatabaseOnStartup": true,
    "ConnectionString": ""
  },
  "HostedServices": {
    "PipelineService": {
      "StartupDelay": "00.00:00:05",
      "SectionDelay": "00.00:00:00.500"
    }    
  },
  "Plugins": {
    "Modules": [
      { "AssemblyNameOrPath": "../../Plugins/CG.Purple.Smtp/bin/Debug/net7.0/CG.Purple.Smtp.dll" },
      { "AssemblyNameOrPath": "../../Plugins/CG.Purple.SendGrid/bin/Debug/net7.0/CG.Purple.SendGrid.dll" },
      { "AssemblyNameOrPath": "../../Plugins/CG.Purple.DoNothing/bin/Debug/net7.0/CG.Purple.DoNothing.dll" }
    ]
  },
  "Seeding": {
    "SeedOnStartup": true,
    "Force": false,
    "FileNames": [
      "Seeding/mimeTypes.json",
      "Seeding/parameterTypes.json",
      "Seeding/propertyTypes.json",
      "Seeding/providerTypes.json",
      "Seeding/providerParameters.json",
      "Seeding/mailMessages.json",
      "Seeding/textMessages.json"
    ]
  },
  "DataProtection": {
    "DisableAutomaticKeyGeneration": false,
    "AzureKeyStorage": {
      "ConnectionString": "",
      "ContainerName": "",
      "BlobName": ""
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Error",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.Hosting" :  "Error"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "\\Logging\\CG.Purple.Host\\log.log",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {SourceContext}{NewLine}{Message:lj}{NewLine}{Exception}{NewLine}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 4194304,
          "retainedFileCountLimit": 7,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
