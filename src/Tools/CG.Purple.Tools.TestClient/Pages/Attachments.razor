@page "/attachments"

<PageTitle>Attachments</PageTitle>

<MudBreadcrumbs Items="_crumbs"></MudBreadcrumbs>

<MudTable T="AttachmentRequest" Items="@State.Attachments">
    <ToolBarContent>
        <MudButton StartIcon="@Icons.Material.Filled.Create"
                   Variant="Variant.Filled"
                   OnClick="OnCreateAsync">Create</MudButton>
        <MudSpacer />
        <MudText Class="ml-auto" Typo="Typo.h6">Attachments</MudText>        
    </ToolBarContent>
    <HeaderContent>
        <MudTh><MudTableSortLabel SortBy="new Func<AttachmentRequest, object>(x=>x.MimeType)">MimeType</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<AttachmentRequest, object>(x=>x.FileName)">FileName</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<AttachmentRequest, object>(x=>x.Length)">Length</MudTableSortLabel></MudTh>
        <MudTh></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="MimeType">@context.MimeType</MudTd>
        <MudTd DataLabel="FileName">@context.FileName</MudTd>
        <MudTd DataLabel="Length">@context.Length</MudTd>
        <MudTd></MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
    <NoRecordsContent>
        No attachments were found.
    </NoRecordsContent>
    <LoadingContent>
        Loading attachments ...
    </LoadingContent>
</MudTable>

